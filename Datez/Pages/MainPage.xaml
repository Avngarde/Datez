<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Datez.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Datez.Pages.MainPage"
             Title="Datez">


    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>    
    
    
<ContentPage.ToolbarItems>
    <ToolbarItem Text="Add Event" Command="{Binding OpenAddNewEventCommand}" />
</ContentPage.ToolbarItems>

    <Grid>
        <CollectionView ItemsSource="{Binding Events}" IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnSpacing="10" RowSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15" />
                        </Grid.RowDefinitions>

                        <Label FontAttributes="Bold" FontSize="18">
                            <Label.Text>
                                <MultiBinding StringFormat="{}{0} - {1}">
                                    <Binding Path="Name" />
                                    <Binding Path="EventDate" StringFormat="{}{0:yyyy-MM-dd}" />
                                </MultiBinding>
                            </Label.Text>
                        </Label>
                            
                        <Label Text="{Binding TimeDifferenceString}"
                            Grid.Row="1"
                            FontSize="14"
                            TextColor="Gray"/>
    
                        <ProgressBar Grid.Row="2"
                             Progress="{Binding TimeDifferenceProgress}"
                             HeightRequest="6"
                             BackgroundColor="#ccd"
                             ProgressColor="{StaticResource Secondary}"/>

                        <BoxView Grid.Row="3"
                            HeightRequest="0.5"
                            Margin="0,15,0,0"
                            BackgroundColor="LightGray"
                            HorizontalOptions="Fill"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid IsVisible="{Binding IsLoading}"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand">
            <ActivityIndicator IsRunning="True"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               Color="{StaticResource Secondary}"
                               WidthRequest="80"
                               HeightRequest="80" />
        </Grid>
    </Grid>

</ContentPage>
